import acm.graphics.*;
import acm.program.*;
import acm.util.*;

import java.awt.*;
import java.awt.event.*;

public class benis extends GraphicsProgram {
	
	public void init() {
		
		addMouseListeners();
		
	}
	
	
	public void mouseClicked(MouseEvent e) {
		
		GLabel benistbh = new GLabel("benis ");
		benistbh.setFont("Helvetica-bold-48");
		add(benistbh, e.getX(), e.getY());
		
	}
	
	private RandomGenerator rgen = RandomGenerator.getInstance();
	private static final int PAUSE_TIME = 200;

}
